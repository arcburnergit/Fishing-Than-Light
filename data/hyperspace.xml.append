    <variable name="fish_this_jump" op="set" val="0"/>
    <req name="fish_option" type="all">
        <req lvl="0" max_lvl="0">
            <name>fish_active</name>
        </req>
        <req>
            <name>BLUELIST_FISHING_RODS</name>
        </req>
    </req>

    <req name="fish_start" type="all">
        <req lvl="0" max_lvl="0">
            <name>fish_this_sector</name>
        </req>
        <req lvl="0" max_lvl="0">
            <name>fish_active</name>
        </req>
