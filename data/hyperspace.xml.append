		<mod-append:empty />
		<mod-append:empty />
	</mod:findLike>
	<mod-append:ship name="PLAYER_SHIP_FISHING" b="false" c="false" >
        <unlock variant="a" silent="false">
			<type>4</type>
		</unlock>
        <achievement name="FISHING_SHIP_ACH_1" layout="all">
            <name>Big Catch</name>
            <description>Have your entire cargo full of fish.</description>
            <icon>fish_1_icon</icon>
            <lockImage>fish_1_icon_locked</lockImage>
        </achievement>
        <achievement name="FISHING_SHIP_ACH_2" layout="all">
            <name>A great voyage</name>
            <description>Successfully catch a fish in sectors belonging to each faction; civilians, rebels, pirates, engi, zoltans, mantis, rocks, slug, orchid, shell, leech, and lanius/ghost .</description>
            <icon>fish_2_icon</icon>
            <lockImage>fish_2_icon_locked</lockImage>
        </achievement>
        <achievement name="FISHING_SHIP_ACH_3" layout="all">
            <name>Hold my fishing rod</name>
            <description>Successfully catch a fish during the fight with the rebel flagship.</description>
            <icon>fish_3_icon</icon>
            <lockImage>fish_3_icon_locked</lockImage>
        </achievement>
	</mod-append:ship>

	<mod-append:customShip name="PLAYER_SHIP_FISHING">
		<hiddenAug>SHIP_SLUG</hiddenAug>
		<hiddenAug>FOR_MULTIVERSE</hiddenAug>
	</mod-append:customShip>

	<mod-append:customShip name="PLAYER_SHIP_FISHING">
	</mod-append:customShip>
</mod:findLike>

