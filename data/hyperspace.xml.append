</events>

<mod:findLike type="ships">
  	<mod:findLike type="shipOrder">
		<mod-append:ship>PLAYER_SHIP_FISHING</mod-append:ship>
		<mod-append:empty />
		<mod-append:empty />
		<mod-append:empty />
			<!-- -->
		<mod-append:empty />
